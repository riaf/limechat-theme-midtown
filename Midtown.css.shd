// lessc -
// vim: ft=less

.clearfix {
  *zoom: 1;
  &:before,
  &:after {
    display: table;
    content: "";
    // Fixes Opera/contenteditable bug:
    // http://nicolasgallagher.com/micro-clearfix-hack/#comment-36952
    line-height: 0;
  }
  &:after {
    clear: both;
  }
}

html {
  font-family: "lucida grande", tahoma, verdana, arial, sans-serif;
  font-size: 9pt;
  background-color: white;
  color: #333;
  word-wrap: break-word;
  margin: 0;
  padding: 3px 4px 10px 4px;
}

body {
  margin: 0;
  padding: 0;

  &.console {
    .sender,
    .message {
      margin-left: 0;
    }
  }

  // &.normal {}
  // &[type=channel]
  // &[type=talk]
  // &[channelname=#limechat]
}

hr {
  margin: 0.5em 2em;
}

a {
  color: #3b5998;
  text-decoration: none;

  &:hover {
    text-decoration: underline;
  }
}

.inlineimage {}

/* lines */
.line {
  .clearfix();
  margin: 2px 5px;
  padding: 3px;

  &:hover {
    background-color: #eff2f7;
  }

  &.action,
  &.event,
  &.mode {
    background-color: #f7f7f7;
    border: 1px solid #cccccc;
  }

  &[alternate=even] {}
  &[alternate=odd] {}
  &[type=action] .sender:before {
    content: "â€¢ ";
    white-space: nowrap;
  }

  &[highlight=true] {
    background-color: #fff9d7;
    border: 1px solid #e2c822;
  }
}

.url {
  word-break: break-all;
}

.address {
  text-decoration: underline;
  word-break: break-all;
}

.highlight {
  color: #dd3c10;
  font-weight: bold;
}

.time {
  display: block;
  float: right;
  color: #999;
  font-size: 85%;
}
.place { color: #008; }
.avatar {
  display: block;
  float: left;
  width: 25px;
}

/* nickname for text messages */
.sender {
  display: block;
  margin: 0 50px 5px 35px;
  color: #3b5998 !important;
  font-weight: bold;

  &[first=false] { display: none; }
