// lessc -
// vim: ft=less

@base-color: #fff;

@font-size: 10pt;
@text-color: darken(@base-color, 80%);
@line-height: 1.5;

@line-margin-tb: 5px;
@line-margin-lr: 0;
@line-padding-tb: 3px;
@line-padding-lr: 8px;

@hover-border-color: darken(@base-color, 20%);
@mode-border-color: @hover-border-color;

.clearfix {
  *zoom: 1;
  &:before,
  &:after {
    display: table;
    content: "";
    // Fixes Opera/contenteditable bug:
    // http://nicolasgallagher.com/micro-clearfix-hack/#comment-36952
    line-height: 0;
  }
  &:after {
    clear: both;
  }
}

html {
  font-family: "lucida grande", tahoma, verdana, arial, sans-serif;
  font-size: @font-size;
  background-color: white;
  color: @text-color;
  word-wrap: break-word;
  margin: 0;
  padding: 3px 0 10px;
  line-height: @line-height;
}

body {
  margin: 0;
  padding: 0;

  // &.normal {}
  // &[type=channel]
  // &[type=talk]
  // &[channelname=#limechat]
}

hr {
  margin: 0.5em 2em;
}

a {
  color: #3b5998;
  text-decoration: none;

  &:hover {
    text-decoration: underline;
  }
}

.inlineimage {}


// lines
// -----

.line {
  .clearfix();
  margin: @line-margin-tb @line-margin-lr;
  padding: @line-padding-tb @line-padding-lr;

  &:hover {
    border-left: 3px solid @hover-border-color;
    padding-left: 5px;
  }

  &.action,
  &.event,
  &.mode {
    margin: 0;
    background-color: #f7f7f7;
    border-left: 3px solid @mode-border-color;
    padding-left: 5px;
  }

  &[alternate=even] {}
  &[alternate=odd] {}
  &[type=action] .sender:before {
    content: "â€¢ ";
    white-space: nowrap;
  }

  &[highlight=true] {
    background-color: #fff9d7;
    border-top: 1px solid #e2c822;
    border-bottom: 1px solid #e2c822;
  }

  &[first=false] {
    margin: 0 @line-margin-lr;
    padding: 0 @line-padding-lr;
  }
}

.url {
  word-break: break-all;
}

.address {
  text-decoration: underline;
  word-break: break-all;
}

.highlight {
  color: #dd3c10;
  font-weight: bold;
}

.time {
  display: block;
  float: right;
  color: #999;
  font-size: 85%;
}
.place { color: #008; }
.avatar {
  display: none;
}


// nickname for text messages
